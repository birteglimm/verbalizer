	<artifactId>verbalizer</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>Verbalizer</name>
	<packaging>bundle</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<pluginId>verbalizer</pluginId>
		<extensionId>${pluginId}.service</extensionId>
		<plugin-zip.file>
			${project.artifactId}-${project.version}
		</plugin-zip.file>
		<protege.version>5.2.1-SNAPSHOT</protege.version>
		<!--   <elk.version>0.4.0</elk.version>-->
		<!--   <elk.version>0.5.0-SNAPSHOT</elk.version> -->
